{
    "swagger": "2.0",
    "info": {
        "description": "Minesweeper API implementation",
        "title": "Minesweeper Go Restful API",
        "contact": {
            "name": "Marcelo Cabezas",
            "email": "mcabezas@outlook.com"
        },
        "license": {},
        "version": "1.0"
    },
    "host": "localhost:5000",
    "basePath": "/",
    "paths": {
        "/games": {
            "post": {
                "description": "Creates a new game",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Games"
                ],
                "summary": "Creates a new game",
                "operationId": "Games",
                "parameters": [
                    {
                        "description": "Create Game input",
                        "name": "CreateParams",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/restapi.CreateGameRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/restapi.CreateGameResponse"
                        }
                    }
                }
            }
        },
        "/games/{game_id}": {
            "get": {
                "description": "Retrieves a Game by ID",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Games"
                ],
                "summary": "Game",
                "operationId": "Games",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Game ID",
                        "name": "game_id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/restapi.GetGameResponse"
                        }
                    }
                }
            }
        },
        "/games/{game_id}/cells/{row}/{column}": {
            "patch": {
                "description": "Reveal a Cell if it is available for that",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Cell"
                ],
                "summary": "Patch a Cell",
                "operationId": "Cell",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Game ID",
                        "name": "game_id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "Row",
                        "name": "row",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "Columns",
                        "name": "column",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/restapi.RevealCellResponse"
                        }
                    }
                }
            }
        },
        "/games/{game_id}/cells/{row}/{column}/flag": {
            "post": {
                "description": "Put a flag into a specific cell",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "RedFlag"
                ],
                "summary": "Puts a flag into a specific cell",
                "operationId": "RedFlag",
                "responses": {
                    "200": {},
                    "204": {},
                    "403": {},
                    "500": {}
                }
            },
            "delete": {
                "description": "Remove a flag from a specific cell",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Games"
                ],
                "summary": "Remove a flag from a specific cell",
                "operationId": "Games",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/restapi.FlagResponse"
                        }
                    },
                    "204": {},
                    "403": {},
                    "500": {}
                }
            }
        }
    },
    "definitions": {
        "restapi.CreateGameRequest": {
            "type": "object",
            "properties": {
                "columns": {
                    "type": "integer"
                },
                "rows": {
                    "type": "integer"
                }
            }
        },
        "restapi.CreateGameResponse": {
            "type": "object",
            "properties": {
                "gameID": {
                    "type": "string"
                }
            }
        },
        "restapi.FlagResponse": {
            "type": "object",
            "properties": {
                "requestID": {
                    "type": "string"
                }
            }
        },
        "restapi.GetGameResponse": {
            "type": "object",
            "properties": {
                "gameID": {
                    "type": "string"
                },
                "requestID": {
                    "type": "string"
                }
            }
        },
        "restapi.RevealCellResponse": {
            "type": "object",
            "properties": {
                "mine": {
                    "type": "boolean"
                },
                "near_mines": {
                    "type": "integer"
                }
            }
        }
    }
}